<!DOCTYPE html>
<html>
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    h1 {
      color: #007bff;
      font-size: 24px;
      text-align: center;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .form-row {
      margin-bottom: 20px;
      display: flex;
      align-items: center;
    }

    label {
      display: inline-block;
      width: 120px;
      font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 200px;
    }

    .buttons-container {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .buttons-container button {
      margin: 0 10px;
    }

    button[type="submit"] {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button[type="submit"]:hover {
      background-color: #0056b3;
    }

    .error-message {
      color: red;
      margin-top: 10px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Update Vaccination Centre</h1>
    <% if (error) { %>
      <p class="error-message"><%= error %></p>
    <% } %>
    <form action="/adminLogin/adminDashboard/updateCentre" method="post">
      <div class="form-row">
        <label for="id">ID:</label>
        <input type="text" id="id" name="id" required>
      </div>
      <div class="form-row">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-row">
        <label for="street">Street:</label>
        <input type="text" id="street" name="street" required>
      </div>
      <div class="form-row">
        <label for="district">District:</label>
        <input type="text" id="district" name="district" required>
      </div>
      <div class="form-row">
        <label for="state">State:</label>
        <input type="text" id="state" name="state" required>
      </div>
      <!-- <div class="form-row">
        <label for="doses">No. of Covishield Vaccines:</label>
        <input type="number" id="covishield" name="covishield" required>
      </div> -->
      <div class="form-row">
        <button type="submit">Submit</button>
      </div>
    </form>
    <div class="buttons-container">
      <button type="submit" onclick="goToDashboard()">Dashboard</button>
    </div>
  </div>

  <script>
    function goToDashboard() {
      window.location.href = "/adminLogin/adminDashboard";
    }
  </script>
</body>
</html>
