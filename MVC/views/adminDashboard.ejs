    </style>
</head>
<body>
    <div class="header">
        <h5>Vaccination Centers</h5>
    </div>
    <div class="upper-btn-box">
        <div class="upper-box">
            <i class="fa fa-search"></i>
            <form action="/adminLogin/adminDashboard/adminSearch" method="post">
                <input type="text" name="searchQuery" id="district" placeholder="Search by District">
                <button>Search</button>
            </form>
        </div>
        <div class="add-centre">
            <form class="add-form" action="/adminLogin/adminDashboard" method="post">
                <input type="text" name="name">
                <input type="text" name="address">
                <button><i class="fa fa-plus"></i> New Centre</button>
            </form>
        </div>
    </div>
    <div class="table-box">
        <table>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
            <% for (var i = 0; i < list.length; i++) { %>
                <% if ((list[i].name).length === 0 || (list[i].address).length === 0) { %>
                    <% continue; %>
                <% } %>
                <tr>
                    <td><%= list[i].name %></td>
                    <td><%= list[i].address %></td>
                    <td>
                        <button><i class="fa fa-eye"></i> Update</button>
                        <button><i class="fa fa-trash"></i> Delete</button>
                    </td>
                </tr>
            <% } %>
        </table>
    </div>
    
</body>
